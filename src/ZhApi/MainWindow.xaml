<Window x:Class="ZhApi.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZhApi.WpfApp"
        mc:Ignorable="d"
        Background="#272727"
        Foreground="{DynamicResource TextE6}"
        d:DataContext="{d:DesignInstance Type=local:MainWindowViewModel}"
        Title="{Binding Version.Version,StringFormat='zhapi {0}'}"
        Height="360" Width="700"

        WindowState="Minimized"

        Closed="Window_Closed" Loaded="Window_Loaded">
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo x:Name="TaskbarItemInfo1"
                         ProgressValue="{Binding Taskbar.ProgressValue}"
                         ProgressState="{Binding Taskbar.State}"/>
    </Window.TaskbarItemInfo>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding Titel}"
                   Visibility="{Binding Titel,
                   Converter={StaticResource notDefautVisibility}}"/>

        <ContentControl
            Grid.Row="1"
            Content="{Binding Control}" />
    </Grid>
</Window>
