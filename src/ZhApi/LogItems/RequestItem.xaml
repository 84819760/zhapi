<UserControl x:Class="ZhApi.WpfApp.LogItems.RequestItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ZhApi.WpfApp.LogItems"
             Padding="5,0"
             mc:Ignorable="d">
    <d:UserControl.DataContext>
        <local:RequestItemViewModel
            RequestLength="1000"
            RetryIndex="5"
            Time="10s"
            />
    </d:UserControl.DataContext>
    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="13" />
        </Style>
    </UserControl.Resources>

    <StackPanel Orientation="Horizontal">
        <TextBlock Foreground="{DynamicResource LogText}" ToolTip="{Binding ToolTip}" >
            <TextBlock.Text>
                <MultiBinding StringFormat="{}{0:N0}:{1}" >
                    <Binding Path="RequestLength" />
                    <Binding Path="RetryIndex" />
                </MultiBinding>
            </TextBlock.Text>
        </TextBlock>
        <TextBlock Text="{Binding Time,StringFormat=' ({0})'}"
                   Visibility="{Binding Time,Converter={StaticResource notDefautVisibility}}"
                   Foreground="{DynamicResource Textdim}" />
    </StackPanel>
</UserControl>
