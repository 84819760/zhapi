<UserControl xmlns:WpfApp="clr-namespace:ZhApi.WpfApp"  x:Class="ZhApi.WpfApp.LogItems.HomeAndStopButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ZhApi.WpfApp.LogItems"
             mc:Ignorable="d"
             Visibility="{Binding ControlVisibility}"
             Foreground="{DynamicResource TextE6}"
             xmlns:Interaction="http://schemas.microsoft.com/expression/2010/interactions"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity">

    <d:UserControl.DataContext>
        <local:HomeAndStopViewModel
            StopEnabled="True"
            Home="Visible"

            />
    </d:UserControl.DataContext>
    <StackPanel Grid.Row="3" Margin="0,0,5,5">

        <Button Command="{Binding CallHomeCommand}"
                Visibility="{Binding Home}"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
            <StackPanel>
                <TextBlock FontSize="15" HorizontalAlignment="Center"
                           FontFamily="{StaticResource SymbolThemeFontFamily}" Text="&#xEA8A;"/>
                <TextBlock FontSize ="9" Text="返回"/>
            </StackPanel>
        </Button>

        <Button Command="{Binding CallStopCommand}"
                Visibility="{Binding Stop}"
                IsEnabled="{Binding StopEnabled}"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
            <StackPanel>
                <TextBlock FontSize="15" HorizontalAlignment="Center"
                           FontFamily="{StaticResource SymbolThemeFontFamily}" Text="&#xE978;"/>
                <TextBlock FontSize ="9" Text="Stop"/>
            </StackPanel>
            <Button.Style>
                <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                    <Style.Triggers>

                        <DataTrigger Binding="{Binding StopEnabled}" Value="True">
                            <Setter Property="Foreground" Value="{DynamicResource TextE6}"/>
                        </DataTrigger>

                        <DataTrigger Binding="{Binding StopEnabled}" Value="False">
                            <Setter Property="Foreground" Value="DimGray"/>
                        </DataTrigger>

                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

    </StackPanel>
</UserControl>
